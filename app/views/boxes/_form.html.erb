<%= form_for @box, :html => { :class => "form-horizontal box" } do |f| %>

  <% if @box.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@box.errors.count, "error") %> prohibited this box from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @box.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :location, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :location, :class => 'form-control' %>
    </div>
    <%=f.error_span(:location) %>
  </div>
  <div class="form-group">
    <%= f.label :city, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :city, :class => 'form-control' %>
    </div>
    <%=f.error_span(:city) %>
  </div>
  <div class="form-group">
    <%= f.label :lat, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :lat, :class => 'form-control' %>
    </div>
    <%=f.error_span(:lat) %>
  </div>
  <div class="form-group">
    <%= f.label :long, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :long, :class => 'form-control' %>
    </div>
    <%=f.error_span(:long) %>
  </div>
  <div class="form-group">
    <%= f.label :sim_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :sim_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:sim_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                boxes_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
